generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgres"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model DriveFile {
  id          String  @id @default(cuid()) @map("_id")
  name        String
  fileName    String
  mimeType    String
  description String?
  userId      String?
  fileUrl     String?
}

model Project {
  id          String   @id @default(cuid()) @map("_id")
  name        String
  description String?
  thumbnail   String?
  images      String[]
  category    String
  link        String?
}

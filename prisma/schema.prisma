generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgres"
  url      = env("DATABASE_PRISMA_URL")
  directUrl = env("DATABASE_URL_NON_POOLING")
}

model DriveFile {
  id          String  @id @default(uuid()) @map("_id")
  name        String
  fileName    String
  mimeType    String
  description String?
  userId      String?
  fileUrl     String?
}

model Project {
  id          String   @id @default(uuid()) @map("_id")
  name        String
  description String?
  images      String[]
  category    String
  link        String?
}
